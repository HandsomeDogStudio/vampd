{
  "name": "Drupal8",
  "description": "The role for Drupal8",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": { },
  "override_attributes": {
    "drupal": {
      "sites": {
        "drupal8": {
          "active": true,
          "deploy": {
            "action": ["deploy", "import", "update"]
          },
          "drupal": {
            "settings": {
              "docroot": "",
              "db_file": "/assets/drupal8/drupal8.mysql"              
            }
          },
          "drupal_user": {
            "admin_user": "admin"
          },
          "repository": {
            "host": "github.com",
            "uri": "git@github.com:HandsomeDogStudio/drupal8.git",
            "revision": "master"
          }
        }
      }
    }
  }
}