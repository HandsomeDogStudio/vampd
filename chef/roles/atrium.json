{
  "name": "atrium",
  "description": "The role for my OpenAtrium installation",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {},
  "override_attributes": {
    "drupal": {
      "sites": {
        "atrium": {
          "active": true,
          "deploy": {
            "action": ["deploy", "install"]
          },
          "drupal": {
            "settings": {
              "docroot": ""             
            }
          },
          "drupal_user": {
            "admin_user": "admin"
          },
          "repository": {
            "host": "github.com",
            "uri": "git@github.com:jordanlgraham/openatrium.git",
            "revision": "master"
          }
        }
      }
    }
  }
}