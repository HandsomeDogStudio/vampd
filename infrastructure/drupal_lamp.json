{
  "php": {
    "directives": {
      "memory_limit": "512M"
    }
  },
  "drupal": {
    "sites": {
      "colorado": {
        "active": true,
        "deploy": {
          "action": ["deploy", "import", "update"],
          "releases": 3
        },
        "drupal": {
          "version": "7.26",
          "registry_rebuild": true,
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "mmg_custom",
            "docroot": "htdocs",
            "files": "htdocs/sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "location": "htdocs/sites/default/settings.php"
              },
              "local_dev": {
                "location": "sites/all/settings.colorado.localdev.php"
              }
            },
            "db_name": "colorado",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/sites/colorado/db/ico_O8272014.sql"
          }
        },
        "repository": {
          "host": "",
          "uri": "/vagrant/sites/colorado/code",
          "revision": "ico_364252",
          "submodule": true,
          "remotes": {
            "upstream": "tim@pluto.milesmedia.com:/home/tim/sandbox/colorado-source"
          }
        },
        "web_app": {
          "80": {
            "server_name": "colorado.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/colorado/current/htdocs"
          }
        }
      },
      "anchorage": {
        "active": false,
        "deploy": {
          "action": ["deploy", "import", "update"],
          "releases": 3
        },
        "drupal": {
          "version": "7.26",
          "registry_rebuild": false,
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "mmg_custom",
            "docroot": "htdocs",
            "files": "htdocs/sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "location": "htdocs/sites/default/settings.php"
              },
              "local_dev": {
                "location": "sites/all/settings.anchorage.localdev.php"
              }
            },
            "db_name": "anchorage",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/sites/anchorage.net/dbs/anch_09022014.sql"
          }
        },
        "repository": {
          "host": "",
          "uri": "/vagrant/sites/anchorage.net/code",
          "revision": "iaw-364054",
          "submodule": true,
          "remotes": {
            "upstream": "tim@pluto.milesmedia.com:/home/tim/anchorage.net"
          }
        },
        "web_app": {
          "80": {
            "server_name": "anchorage.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/anchorage/current/htdocs"
          }
        }
      }
    }
  },
  "nfs_exports": {
    "/assets": {
      "clients": {
        "*": {
          "writeable": true,
          "sync": true,
          "options": [
            "all_squash",
            "anonuid=33",
            "anongid=33"
          ]
        }
      }
    }
  },
  "drupal_frontend": {
    "css_preprocessor": {
      "/srv/www/colorado/current/htdocs/sites/all/themes/mmg_aurora": {
        "active": true,
        "gems": [
          "bundler"
        ],
        "commands": [
          "bundle install && bundle update",
          "bundle exec compass compile"
        ]
      }
    }
  }
}
